<h1>Messages</h1>

<ul class="list-group">
    <% @messages.each do |message| %>
        <li class="list-group-item">
            <h5><%= link_to message.body, message_path(message)  %></h5>
        </li>
    <% end %>
    </ul>



<%= link_to "Send a new message", new_message_path, class:"btn btn-warning" %>