<h1>Create a new Message</h1>

<%= form_for @message do |f| %>
<div class="form-group">
	<%= f.label :to %>
	<%= f.text_field :to, class:"form-control" %>
</div>
<div class="form-group">
	<%= f.label :body %>
	<%= f.text_field :body, class:"form-control" %>
</div>

<div class="form-action">
	<%= f.submit class:"btn btn-primary"%>
</div>

<% end %>