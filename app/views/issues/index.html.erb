<h1>Issues</h1>

<ul class="list-group">
<% @issues.each do |issue| %>
  <li class="list-group-item">
  	<h4><%= link_to issue.note, issue %></h4>
  	<p><%= link_to issue.property.address, issue.property %></p>
  		<% issue.property.tenants.each do |tenant| %>
  		<p><%= link_to tenant.name, tenant %>
  		<% end %> 
  	</li>
    <% end %>
</ul>

<br>

<%= link_to 'Enter an issue', new_issue_path, class:"btn btn-success"%>
