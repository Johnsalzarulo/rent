<%=  form_for @issue do |f| %>

<div class="form-group">
	<%= f.label :note %>
	<%= f.text_area :note, class:"form-control"  %>
</div>

<div class="form-group">
  <%= f.label 'Status' %><br>
  <%= select_tag(:status, options_for_select([['New Issue', 'New Issue'],'In Progress','Completed']), {class:"form-control"}) %>
</div>

<div class="form-group">
  <%= f.label 'Property' %><br>
  <%= collection_select(:issue, :property_id, Property.all, :id, :address, {},{class:"form-control"}) %>
</div>

<div class="actions">
    <%= f.submit class:"btn btn-success"%>
</div>

<% end %>