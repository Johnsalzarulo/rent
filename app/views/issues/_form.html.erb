<%=  form_for @issue do |f| %>

<div class="form-group">
	<%= f.label :note %>
	<%= f.text_area :note, class:"form-control"  %>
</div>

<div class="form-group">
  <%= f.label 'Status' %><br>
      <%= f.select :status, [["New","New"],["In Progress","In Progress"],["Complete","Complete"]],{},{class: 'form-control'} %>
</div>

<div class="form-group">
  <%= f.label 'Property' %><br>
  <%= collection_select(:issue, :property_id, current_landlord.properties, :id, :address, {},{class:"form-control"}) %>
</div>

<div class="actions">
    <%= f.submit class:"btn btn-success"%>
</div>

<% end %>