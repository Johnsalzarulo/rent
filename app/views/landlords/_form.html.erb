<%= form_for(@landlord) do |f| %>
  <% if @landlord.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@landlord.errors.count, "error") %> prohibited this landlord from being saved:</h2>

      <ul>
      <% @landlord.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Company or Owner Name' %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Mailing Address <small>(This should be where you recieve bills.)</small></label><br>
    <%= f.text_field :address, class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Email <small>(This is also used as your login.)</small></label><br>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Phone Number <small>(This is the number tenants should use to contact you.)</small></label><br>
    <%= f.telephone_field :phone, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label 'Password' %><br>
    <%= f.password_field :password, class: "form-control" %><br>
    <%= f.label 'Confirm Password' %><br>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit 'Set Up My Account', class:"btn btn-success" %>
  </div>
<% end %>
