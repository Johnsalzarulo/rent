<div class="container">

	<div class="jumbotron">

	<h3>Login</h3><br>

	<%= form_tag '/login' do %>

	<div class="form-group">
	  <%= text_field_tag :email, nil, placeholder:'Email', class:"form-control"%>
	</div>

	<div class="form-group">
	  <%= password_field_tag :password, nil, placeholder:'Password', class:"form-control" %>
	</div>

	  <div class="actions">
	  	<%= submit_tag "Submit", class:"btn" %>
	  </div>

	<% end %>

	</div>

</div>