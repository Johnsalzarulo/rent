<% if current_landlord.properties.count < 1 %>

  <div class="jumotron text-center">
    <div class="well">
      <h1><div class="glyphicon glyphicon-home"></div></h1>
      <h3><strong>You don't have any properties yet.</strong></h3>
          <%= link_to "Set Up a Property", new_property_path, class:"btn btn-primary"  %>
    </div>
  </div>

<% else %>

<div class="well">
<ul class="nav nav-pills">
    <li class="active"><a href="#occupied" data-toggle="tab" aria-expanded="true">Occupied <div class="badge"><%= @occupied.count %></div></a></li>
  <li class=""><a href="#vacant" data-toggle="tab" aria-expanded="false">Vacant <div class="badge"><%= @vacant.count %></div></a></li>
  <li class=""><%= link_to 'Set Up a new Property', new_property_path %></li>
</ul>
</div>

<div id="propertiesindex" class="tab-content">
    <div class="tab-pane fade active in" id="occupied"><br>
    <ul class="list-group">
    <% @occupied.each do |property| %>
        <li class="list-group-item">
            <h4><%= link_to property.address, property %></h4>
        </li>
    <% end %>
    </ul>
  </div>
  
  <div class="tab-pane fade" id="vacant"><br>
    <ul class="list-group">
        <% @vacant.each do |property| %>
               <li class="list-group-item">
            <h4><%= link_to property.address, property %></h4>
        </li>
    <% end %>
        </ul>

</div>

<% end %>




