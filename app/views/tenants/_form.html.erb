<%= form_for(@tenant) do |f| %>
  <% if @tenant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tenant.errors.count, "error") %> prohibited this tenant from being saved:</h2>

      <ul>
      <% @tenant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, class:"form-control" %>
  </div>
    <div class="form-group">
    <%= f.label :phone %><br>
    <%= f.telephone_field :phone, class:"form-control" %>
  </div>
    <div class="form-group">
    <%= f.label :status %><br>
    <%= f.select :status, [["Active Tenant","active tenant"],["Potential Tenant","potential tenant"],["Past Tenant","past tenant"]],{},{class: 'form-control'} %>
  </div>
    <div class="form-group">
    <%= f.label 'Property' %><br>
    <%= collection_select(:tenant, :property_id, Property.all, :id, :address ,{},{class: 'form-control'})%>
  </div>
  <div class="actions">
    <%= f.submit class:"btn btn-success"%>
  </div>
<% end %>
